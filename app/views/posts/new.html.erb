<div class="posts">

<h1> Write a new post: </h1>
  
	<%= form_for @post do |f| %>
    	<p> <%= f.label :title %>
    	<%= f.text_field :title %> </p>
    	<p> <%= f.label :body %>
    	<%= f.text_area :body %> </p>
    	<%= f.submit "publish" %>
	<% end %>

</div>

<div class="posts">
	
	<%= reverse_name%>
	<h2> <%= @post.title %> </h2>
	<h3> <%= @post.body %> </h3>
</div>

<a href ="new"> Write another post! </a>

<% if @user.errors.full_messages.any? %>   
	<ul>     
		<% @user.errors.full_messages.each do |error_message| %>       <li> <%= error_message%> </li> <br />     
		<% end %>   
	</ul>
<% end %>